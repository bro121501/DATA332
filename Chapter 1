#Always type argument name because R defualts to argument name otherwise values typed in the wrong order can be incorrect

sample(size = 1, x = die)

#The first and second number will never be the same

sample(die, size = 2)

#Allows first and second number to be the same

sample(die, size = 2, replace = TRUE)

dice <- sample(die, size = 2, replace = TRUE)
dice

sum(dice)

dice

dice

dice

#Creating a function

roll <- function() {
  die <- 1:6
  dice <- sample(die, size = 2, replace = TRUE)
  sum(dice)
}

roll()

roll

#Function to display code
displayCodeFunction <- function() {
  dice
  1 + 1
  sqrt(2)
}

#Function not displaying code

noDisplayCodeFunction <- function() {
  dice <- sample(die, size = 2, replace = TRUE)
  two <- 1+1
  a <- sqrt(2)
}

#Creating arguments

roll2 <- function() {
  dice <- sample(bones, size = 2 replace = TRUE)
  sum(dice)
}

roll2 <- function(bones){
  dice <- sample(bones, size = 2, replace TRUE)
  sum(dice)
}

roll2(bones = 1:4)
roll2(bones = 1:6)
roll2(1:20)
roll2()

roll2 <- function(bones = 1:6) {
  dice <- sample(bones, size = 2, replace = TRUE)
  sim(dice)
}

roll2()
